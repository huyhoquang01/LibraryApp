<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="7dp"
    android:background="@drawable/main_ui"
    android:layout_marginBottom="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/tvThoiGianMua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textColor="@android:color/tertiary_text_dark"/>
        <ImageView
            android:id="@+id/ivXoaHDCT"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_clear"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/ivXoaHDCT"
            android:text="ID"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvMaHDCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivXoaHDCT"
            android:layout_alignParentEnd="true"
            android:text="Mã HDCT"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMaHDCT"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Mã Sách"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvMaSachCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMaHDCT"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="Mã Sách"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMaSachCT"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Số lượng"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvSoLuongCT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMaSachCT"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="Số lượng chi tiết"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSoLuongCT"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="Thành tiền"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvThanhTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSoLuongCT"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:text="Thành tiền"
            android:textColor="#000"
            android:textSize="20sp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>