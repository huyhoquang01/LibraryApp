<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".QuanLi.QuanLiSachActivity">

    <TextView
        android:id="@+id/txtThemSach"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textColor="#A733BC"
        android:layout_height="wrap_content"
        android:text="THÊM SÁCH"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/edtThemTenSach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Tên sách"
        android:inputType="textPersonName"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spnThemMaTheLoaiSach"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:layout_weight="4" />

    <EditText
        android:id="@+id/edtThemTacGia"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Tác giả"
        android:inputType="textPersonName"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtThemNXB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Nhà xuất bản"
        android:inputType="textPersonName"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtThemGiaTien"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Giá tiền"
        android:inputType="number"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:paddingStart="7dp" />

    <EditText
        android:id="@+id/edtThemSoLuong"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Số lượng"
        android:inputType="number"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp"
        android:paddingStart="7dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThemSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/customize_button"
            android:text="Thêm"

            android:textColor="#673AB7"
            android:textSize="19sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btnHuyThemSach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/customize_button"
            android:text="Hủy"

            android:textColor="#673AB7"
            android:textSize="19sp"
            android:layout_marginStart="4dp" />
    </LinearLayout>
</LinearLayout>