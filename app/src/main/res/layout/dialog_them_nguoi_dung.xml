<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".QuanLi.QuanLiNguoiDungActivity">

    <TextView
        android:id="@+id/txtThemNguoiDung"
        android:textSize="30sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:textColor="#A733BC"
        android:layout_height="wrap_content"
        android:text="THÊM NGƯỜI DÙNG"

        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/edtThemTenDangNhap"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edit_text_box"
        android:hint="Tên đăng nhập"
        android:inputType="textPersonName"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtThemMatKhau"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtThemLaiMatKhau"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Nhập lại mật khẩu"
        android:inputType="textPassword"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edtThemHoTen"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:ems="10"
        android:hint="Họ tên"
        android:inputType="textPersonName"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/edtThemSoDienThoai"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/edit_text_box"
        android:maxLength="10"
        android:hint="Số điện thoại"
        android:inputType="number"
        android:paddingLeft="7dp"
        android:textColor="#000"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnThemNguoiDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/customize_button"
            android:text="Thêm"

            android:textColor="#673AB7"
            android:textSize="19sp" />

        <Button
            android:id="@+id/btnHuyThemNguoiDung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:background="@drawable/customize_button"
            android:text="Hủy"

            android:textColor="#673AB7"
            android:textSize="19sp"
            android:layout_marginStart="4dp" />
    </LinearLayout>
</LinearLayout>